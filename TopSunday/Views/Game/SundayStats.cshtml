@model TopSunday.ViewModels.GamesViewModel
@{
    ViewBag.Title = "SundayStats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div.teamFoot, teamFoot {
        display: none !important;
    }


    #tbClassification tr:nth-child(2),
    #tbClassification tr:nth-child(5),
    #tbClassification tr:nth-child(7),
    #tbClassification tr:nth-child(8),
    #tbClassification tr:nth-child(11) {
        background-color: red;
    }

    #tbClassification tr:nth-child(3),
    #tbClassification tr:nth-child(4),
    #tbClassification tr:nth-child(6),
    #tbClassification tr:nth-child(9),
    #tbClassification tr:nth-child(10) {
        background-color: blue;
    }

    #selectedTeams {
        background-image: url(/img/campo.jpg);
        no-repeat center top scroll;
        background-size: 100% auto;
        padding-bottom: 50%;
        background-repeat: no-repeat;
    }
</style>
<h2><u>Domingos</u></h2>

<div class="row" >
    <div class="col-xs-12 col-md-12 col-lg-6" >
        <iframe id="teamA" width="354" height="526" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@Model.LinkTeamA"></iframe>

    </div>
    <div class="col-xs-12 col-md-12 col-lg-6">
        <iframe id="teamB" width="354" height="526" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="@Model.LinkTeamB"></iframe>

    </div>
</div>

<div class="row">



    <div class="col-xs12 col-md-12 col-lg-12">
        <div class="table-responsive">
            <table class="table" id="tbClassification">
                <tr>


                    <th>
                        Nome
                    </th>
                    <th>
                        J
                    </th>
                    <th>
                        V
                    </th>
                    <th>
                        D
                    </th>
                    <th>
                        E
                    </th>
                    <th>
                        G
                    </th>
                    <th>
                        Pts
                    </th>
                    <th>
                    </th>

                </tr>


                @foreach (TopSunday.Models.Classification item in Model.Classification)
            {
                    <tr>


                        <td>
                            @item.Player.Name
                        </td>
                        <td>
                            @item.NumGames
                        </td>
                        <td>
                            @item.Wins
                        </td>
                        <td>
                            @item.Loses
                        </td>
                        <td>
                            @item.Draws
                        </td>
                        <td>
                            @item.Goals
                        </td>
                        <td>
                            @item.TotalPoints

                        </td>

                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
 


        $('#introHeader').hide();
        $('div.teamFoot').hide();


    });




</script>
